<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row"> 

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <% if current_user %>
          <h2> Review </h2>
          <%= form_for [@product, Review.new] do |f| %>
            <div class="form-group">
            <%= flash[:error] %>
          <%= f.text_area :description %>
          <%= f.select :rating, ((0..5)) %>
          </div>
          <%= f.submit "Submit your review" %>
          <% end %>
          <dt><h2>Reviews:</h2></dt>
          <dd><% @product.reviews.each do |review| %>
            <dt> Description </dt>
            <dd><%= review.description %> </dd>
            <dt> Rating </dt>
            <dd><%= review.rating %> </dd>
            <% end %>
        </dl>
      </div>
    </div>
    <% end %>
  </article>

</section>
